{
  "name": "aya-language-support",
  "displayName": "Aya Language Support",
  "description": "Support for the Aya scripting language",
  "version": "0.0.1",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "publisher": "nick-paul",
  "repository": {
    "type": "git",
    "url": "https://github.com/aya-lang/aya-language-support.git"
  },
  "homepage": "https://github.com/aya-lang/aya-language-support",
  "bugs": {
    "url": "https://github.com/aya-lang/aya-language-support"
  },
  "keywords": ["aya", "language", "syntax highlighting", "stack-oriented", "code-golf"],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "aya",
        "aliases": [
          "Aya",
          "aya"
        ],
        "extensions": [
          ".aya"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aya",
        "scopeName": "source.aya",
        "path": "./syntaxes/aya.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "aya.run",
        "title": "Run Aya Script",
        "icon": "$(play)"
      },
      {
        "command": "aya.check",
        "title": "Check Aya Syntax"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .aya",
          "command": "aya.run",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "aya.run",
          "when": "resourceExtname == .aya"
        },
        {
          "command": "aya.check",
          "when": "resourceExtname == .aya"
        }
      ]
    },
    "configuration": {
      "title": "Aya",
      "properties": {
        "aya.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to aya.jar interpreter"
        },
        "aya.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic syntax checking"
        }
      }
    }
  },
  "main": "./src/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.102.0",
    "typescript": "^4.9.4"
  }
}
